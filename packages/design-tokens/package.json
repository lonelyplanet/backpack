{
  "name": "@lonelyplanet/backpack-design-tokens",
  "version": "1.0.0",
  "description": "backpack-design-tokens contains the design tokens used across lonelyplanet.com",
  "main": "dist/js/index.js",
  "scripts": {
    "start": "tsc --watch",
    "start:webpack": "webpack --watch",
    "build": "npm run clean && npm run build:js && npm run build:es && npm run build:css",
    "build:js": "tsc",
    "build:es": "tsc -p tsconfig-es.json",
    "build:css": "webpack",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf dist && rm -rf dist-es",
    "test": "NODE_ENV=test jest",
    "tslint": "tslint -c tslint.json './src/**/*.ts'",
    "stylelint": "stylelint src/**/*.scss",
    "lint": "npm run tslint && npm run stylelint",
    "precommit": "npm run lint && npm test"
  },
  "author": "Lonely Planet",
  "license": "MIT",
  "dependencies": {
    "color": "^3.0.0"
  },
  "devDependencies": {
    "@types/color": "^3.0.0",
    "@types/jest": "^22.2.3",
    "css-loader": "^0.28.11",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "jest": "^22.4.3",
    "postcss": "^6.0.22",
    "postcss-calc": "^6.0.1",
    "postcss-loader": "^2.1.5",
    "postcss-map": "^0.9.0",
    "pre-commit": "^1.2.2",
    "style-loader": "^0.21.0",
    "stylelint": "^9.2.1",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.1.0",
    "tslint": "^5.10.0",
    "tslint-eslint-rules": "^5.3.1",
    "typescript": "^2.8.3",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testMatch": [
      "**/__tests__/*.(js|ts)"
    ],
    "transform": {
      "^.+\\.(js|ts)$": "<rootDir>/preprocessor.js"
    }
  }
}
